<div class="w-full max-w-4xl bg-gray-100 rounded-md flex items-center">
  <form class="w-full flex items-center justify-between" action="/search" method="post">
    <select
      class="bg-transparent uppercase font-bold text-sm p-4 mr-4"
      name="from"
      id=""
    >
      <option>From</option>
      <% cities.forEach((city)=> { %>
      <option value="<%= city.name %>">
        <%= city.name %>
      </option>
      <% }) %>
    </select>

    <select
      class="bg-transparent uppercase font-bold text-sm p-4 mr-4"
      name="to"
      id=""
    >
      <option>To</option>
      <% cities.forEach((city)=> { %>
      <option value="<%= city.name %>">
        <%= city.name %>
      </option>
      <% }) %>
    </select>
    <input
      name="Date"
      class="bg-transparent uppercase font-bold text-sm p-4 mr-4"
      type="date"
      placeholder="Departure date"
    />
    <button >
      <svg
        class="ml-auto h-5 px-4 text-gray-500"
        aria-hidden="true"
        focusable="false"
        data-prefix="far"
        data-icon="search"
        role="img"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 512 512"
        class="svg-inline--fa fa-search fa-w-16 fa-9x cursor-pointer"
      >
        <path
          fill="currentColor"
          d="M508.5 468.9L387.1 347.5c-2.3-2.3-5.3-3.5-8.5-3.5h-13.2c31.5-36.5 50.6-84 50.6-136C416 93.1 322.9 0 208 0S0 93.1 0 208s93.1 208 208 208c52 0 99.5-19.1 136-50.6v13.2c0 3.2 1.3 6.2 3.5 8.5l121.4 121.4c4.7 4.7 12.3 4.7 17 0l22.6-22.6c4.7-4.7 4.7-12.3 0-17zM208 368c-88.4 0-160-71.6-160-160S119.6 48 208 48s160 71.6 160 160-71.6 160-160 160z"
        ></path>
      </svg>
    </a>
</button>
</div>
