<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css"
      integrity="sha512-wnea99uKIC3TJF7v4eKk4Y+lMz2Mklv18+r4na2Gn1abDRPPOeef95xTzdwGD9e6zXJBteMIhZ1+68QC5byJZw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    <title><%- page %></title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body
    class="bg-fixed bg-no-repeat flex flex-col justify-between relative"
    style="background: radial-gradient(circle at left top, #ffb3b3, #560b6b)"
  >
    <header class="w-full">
      <div
        class="max-w-screen-2xl flex justify-between items-center px-4 md:px-8 mx-auto"
      >
        <!-- logo - start -->
        <a
          href="/"
          class="inline-flex items-center text-2xl md:text-3xl font-bold gap-2.5"
          style="color: #790707"
          aria-label="logo"
        >
          <img class="w-20" src="/logo.png" alt="" />
        </a>
        <!-- logo - end -->

        <!-- buttons - start -->
        <div class="flex">
          <a
            href="/login"
            class="w-12 sm:w-20 md:w-24 h-12 sm:h-20 md:h-24 flex flex-col justify-center items-center transition duration-100 gap-1.5"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              style="color: white"
              class="w-6 h-6"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
              />
            </svg>

            <span class="hidden sm:block text-xs font-semibold text-white"
              >Account</span
            >
          </a>
          <a
            href="/admin"
            class="w-12 sm:w-20 md:w-24 h-12 sm:h-20 md:h-24 flex flex-col justify-center items-center transition duration-100 gap-1.5"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              style="color: white"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="feather feather-shield"
            >
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
            </svg>

            <span class="hidden sm:block text-xs font-semibold text-white"
              >Admin</span
            >
          </a>
        </div>
        <!-- buttons - end -->
      </div>
    </header>
  </body>
</html>
