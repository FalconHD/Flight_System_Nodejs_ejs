<%- include('./src/views/particial/header.ejs',{page:"Home"}) %>

<div class="py-6 sm:py-8 lg:py-12">
  <div class="max-w-screen-2xl px-4 md:px-8 mx-auto">
    <div
      class="flex flex-col lg:flex-row lg:justify-between items-center bg-gray-100 rounded-lg p-4 sm:p-8"
    >
      <div class="flex flex-col gap-3">
        <div
          class="flex justify-between text-lg items-center bg-red-300 rounded-lg px-3 py-1"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="feather feather-users"
          >
            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
            <circle cx="9" cy="7" r="4"></circle>
            <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
          </svg>
          <%- data.available %>
        </div>
        <div
          class="flex justify-between text-lg items-center bg-yellow-200 rounded-lg px-3 py-1"
        >
          <%- data.price %> MAD
        </div>
      </div>
      <div class="mb-4 sm:mb-8 lg:mb-0 flex gap-10 items-center">
        <div>
          <h2
          style="color: #790707"
            class="text-indigo-500 text-xl sm:text-2xl lg:text-3xl font-bold text-center lg:text-left"
          >
            <%= data.origin.name %>
          </h2>
          <p
            class="flex items-center gap-1 text-gray-500 text-center lg:text-left"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="feather feather-clock"
            >
              <circle cx="12" cy="12" r="10"></circle>
              <polyline points="12 6 12 12 16 14"></polyline>
            </svg>
            <%= data.startingTime %>
          </p>
        </div>
        <div class="flex items-center w-30">
          <div style="background-color: #790707" class="h-8 w-8 rounded-full bg-purple-900"></div>
          <div
            class="h-2 border-t-8 border-b-0 border-gray-900 opacity-50 w-10 lg:w-30 md:w-64 ms:w-48"
          ></div>
          <div
          style="background-color: #790707"
            class="h-8 w-8 min-h-10 min-w-10 rounded-full bg-purple-900"
          ></div>
        </div>
        <div>
          <h2
          style="color: #790707"
            class="text-indigo-500 text-xl sm:text-2xl lg:text-3xl font-bold text-center lg:text-left"
          >
            <%= data.destination.name %>
          </h2>
          <p
            class="flex items-center gap-1 text-gray-500 text-center lg:text-left"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="feather feather-clock"
            >
              <circle cx="12" cy="12" r="10"></circle>
              <polyline points="12 6 12 12 16 14"></polyline>
            </svg>
            <%= data.endingTime %>
          </p>
        </div>
      </div>

      <div class="flex flex-col items-end lg:items-end">
        <a href="/flights">
          <button
          style="background-color: #790707"
            class="inline-block bg-indigo-500 hover:bg-indigo-600 active:bg-indigo-700 focus-visible:ring ring-indigo-300 text-white text-sm md:text-base font-semibold text-center rounded outline-none transition duration-100 px-8 py-2"
          >
            Edit
          </button>
        </a>
      </div>
    </div>
  </div>
</div>
<div class="py-6 sm:py-8 lg:py-12">
  <div class="max-w-screen-2xl px-4 md:px-8 mx-auto">
    <!-- text - start -->
    <div class="mb-5 md:mb-10">
      <p class="max-w-screen-md text-gray-100 md:text-lg text-center mx-auto">
        FILL YOUR PERSONAL INFORMATION TO COMPLETE YOUR BOOKING
      </p>
    </div>
    <!-- text - end -->

    <!-- form - start -->
    <form
      method="post"
      class="max-w-screen-md grid sm:grid-cols-2 gap-4 mx-auto"
    >
      <div>
        <label
          for="firstName"
          class="inline-block text-gray-800 text-sm sm:text-base mb-2"
          >First name*</label
        >
        <input
          name="firstName"
          class="w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2"
        />
      </div>

      <div>
        <label
          for="lastName"
          class="inline-block text-gray-800 text-sm sm:text-base mb-2"
          >Last name*</label
        >
        <input
          name="lastName"
          class="w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2"
        />
      </div>

      <div class="sm:col-span-2">
        <label
          for="Phone"
          class="inline-block text-gray-800 text-sm sm:text-base mb-2"
          >Phone</label
        >
        <input
          name="phone"
          class="w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2"
        />
      </div>

      <div class="sm:col-span-2">
        <label
          for="email"
          class="inline-block text-gray-800 text-sm sm:text-base mb-2"
          >Email*</label
        >
        <input
          name="email"
          class="w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2"
        />
      </div>
      <div class="sm:col-span-2">
        <label
          for="password"
          class="inline-block text-gray-800 text-sm sm:text-base mb-2"
          >password*</label
        >
        <input
          type="password"
          name="password"
          class="w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2"
        />
      </div>

      <div class="sm:col-span-2">
        <label
          for="Address"
          class="inline-block text-gray-800 text-sm sm:text-base mb-2"
          >Address*</label
        >
        <input
          name="address"
          class="w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2"
        />
      </div>

      <div class="sm:col-span-2">
        <label
          for="places"
          class="inline-block text-gray-800 text-sm sm:text-base mb-2"
          >Number of places (including your self)</label
        >
        <% if(data.available > 0) { %>
        <select
          type="number"
          name="places"
          class="w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2"
        >
          <% for (let i = 1; i <= data.available; i++) {%>
          <option value="<%= i %>"><%= i %></option>
          <% } %>
        </select>
        <% } else { %>
        <select
          disabled
          type="number"
          name="places"
          class="w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2"
        ></select>
        <% } %>
      </div>
      <div class="flex justify-between flex-wrap sm:col-span-2 py-6">
        <section class="">
          <label
            for="checkbox1"
            class="relative flex-inline items-center isolate w-full p-4 rounded-md"
          >
            <input
              value="30"
              id="checkbox1"
              name="transport"
              type="checkbox"
              class="relative peer z-20 text-purple-600 rounded-md focus:ring-0"
            />
            <span class="ml-2 relative z-20">Transportation </span>
            <div
              class="absolute inset-0 bg-white peer-checked:bg-purple-50 peer-checked:border-purple-300 z-10 border rounded-md"
            ></div>
          </label>
        </section>
        <section class="">
          <label
            for="checkbox2"
            class="relative flex-inline items-center isolate p-4 rounded-md"
          >
            <input
              value="150"
              id="checkbox2"
              name="hotel"
              type="checkbox"
              class="relative peer z-20 text-purple-600 rounded-md focus:ring-0"
            />
            <span class="ml-2 relative z-20">Hotel</span>
            <div
              class="absolute inset-0 bg-white peer-checked:bg-purple-50 peer-checked:border-purple-300 z-10 border rounded-md"
            ></div>
          </label>
        </section>
        <section class="">
          <label
            for="checkbox3"
            class="relative flex-inline items-center isolate p-4 rounded-md min-w-full"
          >
            <input
              value="70"
              id="checkbox3"
              name="restauration"
              type="checkbox"
              class="relative peer z-20 text-purple-600 rounded-md focus:ring-0"
            />
            <span class="ml-2 relative z-20">Restauration</span>
            <div
              class="absolute inset-0 bg-white peer-checked:bg-purple-50 peer-checked:border-purple-300 z-10 border rounded-md w-full"
            ></div>
          </label>
        </section>
      </div>
      <div class="sm:col-span-2 flex justify-between items-center">
        <button
        style="background-color: #790707"
          class="<%- data.available > 0 ? "" : "hidden" %>  inline-block bg-indigo-500 hover:bg-indigo-600 active:bg-indigo-700 focus-visible:ring ring-indigo-300 text-white text-sm md:text-base font-semibold text-center rounded-lg outline-none transition duration-100 px-8 py-3 w-full"
        >
          RESERVE
        </button>
      </div>
    </form>
    <!-- form - end -->
  </div>
</div>

<!-- footer - start -->
<%- include('./src/views/particial/footer.ejs') %>
